<h1>Edit User</h1>

<%= form_with model: @user do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username%>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "example@example.com" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>